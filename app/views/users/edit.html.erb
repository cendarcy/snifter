<h1>Edit Users</h1>

<%= form_for @user do |form| %>
	<h2>First name:</h2>
	<%= form.text_field :fname %><br>
	<h2>Last name:</h2>
	<%= form.text_field :lname %><br>
	<h2>Username:</h2>
	<%= form.text_field :username %><br>
	<h2>Password:</h2>
	<%= form.text_field :password %><br>
	<h2>Email:</h2>
	<%= form.text_field :email %><br>
	<%= form.submit %>
<% end %>	

<%= form_tag("/search", method: "get") do %>
	<%= label_tag(:query, "Search") %>
	<%= text_field_tag(:query) %>
	<%= submit_tag("Submit") %>
<% end %>	